{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "jsx": "react-jsx",       // React 17+ 新 JSX 转换
    "esModuleInterop": true,   // 允许 ES 模块的默认导入
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "paths": {
      // TS5090 leading './'
      "@/*": ["./src/*"],
      "am-taro-form": ["./src/packages"]
    }
  },
  "include": ["./src", "./types", "./config"],
  "compileOnSave": false,
}
